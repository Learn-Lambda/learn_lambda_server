datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

//пользователь
model User {
  id         Int      @id @default(autoincrement())
  email      String   @unique
  login      String   @unique
  password   String
  createDate DateTime @default(now())
}

// задача для решения кодом
model Task {
  id                       Int      @id @default(autoincrement())
  name                     String
  description              String
  functionName             String
  code                     String
  complexity               Int
  createDate               DateTime @default(now())
  testArguments            String
  numberOfTimesSolved      Int      @default(0)
  isOpen                   Boolean  @default(false)
  tags                     String[] @default([])
  usersWhoSolvedTheTask    Int[]    @default([])
  usersWhoSolvedTaskAiHelp Int[]    @default([])
}

//решения задач для
model Solution {
  id         Int      @id @default(autoincrement())
  authors    Int[]
  counter    Int
  taskId     Int
  hash       String
  code       String
  createDate DateTime @default(now())
}

model Admin {
  id       Int    @id @default(autoincrement())
  login    String @unique
  password String
}

model CommonTaskCollection {
  id Int @id @default(autoincrement())
}

model UserTaskCollection {
  id Int @id @default(autoincrement())
}

model SelectAllTask {
  id         Int       @id @default(autoincrement())
  lastUpdate DateTime?
  createDate DateTime  @default(now())
}

model RecognitionCategory {
  id            Int    @id @default(autoincrement())
  helper        String
  comonCategory String
  subCategory   String
}

model RecognitionCategoryTask {
  id                    Int    @id @default(autoincrement())
  //RecognitionCategory id
  recognitionCategoryId Int
  code                  String
  ranges                Json
}

//текущая активаня колекция задач
model UserCurrentTaskCollection {
  id              Int   @id @default(autoincrement())
  userId          Int
  currentTasksIds Int[] @default([])
}

//статистика контертного пользователя по языку
model StatisticTypesUsage {
  id                 Int  @id @default(autoincrement())
  userId             Int
  jsonStatisticUsage Json
}

//статистика пользователя за год
model StatisticTaskSolutions {
  id        Int  @id @default(autoincrement())
  userId    Int
  year      Int
  statistic Json
}

//общая статистика тегов 
model SolutionTags {
  id                 Int   @id @default(autoincrement())
  jsonStatisticUsage Json?
}

// закешированные сообщения решенных задач с помощью ИИ
model SolvedWithAi {
  id            Int      @id @default(autoincrement())
  solvedMessage Json
  taskId        Int
  userId        Int
  date          DateTime
}
